<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {% block meta %}
        <meta name="description" content="Description">
        <meta name="author" content="Group">
    {% endblock %}

    <title>{% block title %}WebShop{% endblock %}</title>

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset("css/bootstrap.min.css") }}">
        <link rel="stylesheet" href="{{ asset("css/shop.css") }}">
    {% endblock %}
</head>

<body>

<div class="container">
    {% include "_main_navigation.html.twig" %}
    {% include "_flash_messages.html.twig" %}

    {# body #}
    <div class="row">
        <main class="col-md-12">
            <h1 class="h3">{% block main_title %}Latest products{% endblock %}</h1>
            <hr>
            {% block main %}
            {% endblock %}
        </main>
    </div>

    <hr>
    <footer>
        {% block footer %}
        {% endblock %}
    </footer>
</div>

{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/4.4.0/bootbox.min.js"></script> <script src="{{ asset("js/bootstrap.min.js") }}"></script>
    <script src="{{ asset("js/main.js") }}"></script>
{% endblock %}

</body>
</html>
